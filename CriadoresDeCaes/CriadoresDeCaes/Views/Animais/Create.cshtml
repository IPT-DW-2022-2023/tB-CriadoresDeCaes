@model CriadoresDeCaes.Models.Animais

@{
   ViewData["Title"] = "Adicionar";
}

<h1>Criar um novo animal</h1>

<hr />

<div class="row">
   <div class="col-md-4">

      @* o parâmetro 'enctype' é fundamental para o formulário
      enviar ficheiros
      *@
      <form asp-action="Create" method="post" enctype="multipart/form-data">

         @* espaço para mostrar as mensagens de erro gerais  *@
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>



         <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
         </div>

         <div class="form-group">
            <label asp-for="DataNascimento" class="control-label"></label>
            <input asp-for="DataNascimento" class="form-control" />
            <span asp-validation-for="DataNascimento" class="text-danger"></span>
         </div>

         <div class="form-group">
            <label asp-for="DataCompra" class="control-label"></label>
            <input asp-for="DataCompra" class="form-control" />
            <span asp-validation-for="DataCompra" class="text-danger"></span>
         </div>

         @* adição de um novo atributo para recolher o Preço de Compra
         do animal
         *@
         <div class="form-group">
            <label asp-for="PrecoCompraAux" class="control-label"></label>
            <input asp-for="PrecoCompraAux" class="form-control" />
            <span asp-validation-for="PrecoCompraAux" class="text-danger"></span>
         </div>

         <div class="form-group">
            <label asp-for="Sexo" class="control-label"></label>
            <input asp-for="Sexo" class="form-control" />
            <span asp-validation-for="Sexo" class="text-danger"></span>
         </div>

         <div class="form-group">
            <label asp-for="NumLOP" class="control-label"></label>
            <input asp-for="NumLOP" class="form-control" />
            <span asp-validation-for="NumLOP" class="text-danger"></span>
         </div>

         <div class="form-group">
            <label asp-for="RacaFK" class="control-label"></label>
            @* dropdown *@
            <select asp-for="RacaFK"
                    class="form-control"
                    asp-items="ViewBag.RacaFK">
               <option value="0">-- escolha uma raça, por favor --</option>
            </select>
         </div>

         <div class="form-group">
            <label asp-for="CriadorFK" class="control-label"></label>
            <select asp-for="CriadorFK" class="form-control" asp-items="ViewBag.CriadorFK">
               <option value="0">-- escolha um criador, por favor --</option>
            </select>
         </div>

         @* recolher a imagem do animal *@
         <div class="form-group">
            <label class="control-label">Fotografia</label>
            <input class="form-control"
                   type="file"
                   accept=".jpg,.jpeg,.png"
                   name="imagemAnimal" />
         </div>

         <br />
         <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
         </div>

      </form>
   </div>
</div>

<div>
   <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
   @{
      await Html.RenderPartialAsync("_ValidationScriptsPartial");
   }
}
